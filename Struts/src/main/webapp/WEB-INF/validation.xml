<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
    <formset>
        <!-- Validation cho LoginForm -->
        <form name="loginForm">
            <field property="username" depends="required">
                <arg key="label.username"/>
            </field>
            <field property="password" depends="required">
                <arg key="label.password"/>
            </field>
        </form>

        <!-- Validation cho CustomerForm -->
        <form name="customerForm">
            <field property="customerName" depends="required">
                <arg key="label.customerName"/>
            </field>

            <field property="birthDate" depends="required,date">
                <arg key="label.birthDate"/>
                <var>
                    <var-name>datePattern</var-name>
                    <var-value>yyyy-MM-dd</var-value>
                </var>
            </field>

            <field property="gender" depends="required">
                <arg key="label.gender"/>
            </field>

            <field property="address" depends="required">
                <arg key="label.address"/>
            </field>
        </form>
    </formset>
</form-validation>