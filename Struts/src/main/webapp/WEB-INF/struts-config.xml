<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
    
    <!-- Form Beans -->
    <form-beans>
        <form-bean name="customerForm" type="com.demo.form.CustomerForm"/>
        <form-bean name="searchForm" type="com.demo.form.SearchForm"/>
        <form-bean name="columnForm" type="com.demo.form.ColumnForm"/>
    </form-beans>
    
    <!-- Global Forwards -->
    <global-forwards>
        <forward name="success" path="/index.jsp"/>
        <forward name="error" path="/error.jsp"/>
        <forward name="login" path="/login.jsp"/>
    </global-forwards>
    
    <!-- Action Mappings -->
    <action-mappings>
        
        <!-- Login Action -->
        <action path="/login" name="customerForm" type="com.demo.action.LoginAction" input="/login.jsp" scope="request">
            <forward name="success" path="/search.jsp"/>
            <forward name="failure" path="/login.jsp"/>
        </action>
        
        <!-- Search/List Action -->
        <action path="/search" name="searchForm" type="com.demo.action.SearchAction" scope="request">
            <forward name="success" path="/list.jsp"/>
            <forward name="failure" path="/search.jsp"/>
        </action>
        
        <!-- Edit Action -->
        <action path="/edit" name="customerForm" type="com.demo.action.EditAction" scope="request">
            <forward name="success" path="/edit.jsp"/>
            <forward name="view" path="/view.jsp"/>
            <forward name="failure" path="/search.jsp"/>
        </action>
        
        <!-- Delete Action -->
        <action path="/delete" name="customerForm" type="com.demo.action.DeleteAction" scope="request">
            <forward name="success" path="/search.jsp"/>
            <forward name="failure" path="/search.jsp"/>
        </action>
        
        <!-- Column Configuration Action -->
        <action path="/column" name="columnForm" parameter="action"
                type="com.demo.action.ColumnAction" scope="session">
            <forward name="success" path="/columnConfig.jsp"/>
            <forward name="displayItem" path="/displayItem.jsp"/>
            <forward name="error" path="/columnConfig.jsp"/>
        </action>
        
        <!-- Product Action -->
        <action path="/product" type="com.demo.action.ProductAction" scope="request">
            <forward name="success" path="/displayItem.jsp"/>
        </action>
        
    </action-mappings>
    
    <!-- Message Resources -->
    <message-resources parameter="com.demo.messageResource"/>
    
</struts-config>
